= form_for @feature do |f|
  - if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tittle
    %br
    = f.text_field :tittle
  .field
    = f.label :price
    %br
    = f.text_field :price
  .field
    =f.label :description
    %br/
    =f.text_area :description
  .field
    =f.label :category
    %br
    =f.collection_select(:category_id, Category.where(categoryState: 'Aprobado') , :id, :name, { :include_blank => true })
    
    = link_to "Request Category", new_category_path, :class => 'link'
  .field
    = f.label :image
    = f.file_field :image

  .actions
    = f.submit 'Save', :class => 'button'
