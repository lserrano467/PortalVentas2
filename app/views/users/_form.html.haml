= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :lastName
    = f.text_field :lastName
  .field
    = f.label :userName
    = f.text_field :userName
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :userType
    = f.text_field :userType
  .field
    = f.label :password
    = f.password_field :password
  .actions
    = f.submit 'Save'
